{
  "tests": [
    {
      "name": "Test OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test image generation with valid prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "A beautiful sunset over mountains"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "url": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test missing prompt error",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
